import java.util.ArrayList

var java.util.concurrent.locks.ReentrantLock lock = new java.util.concurrent.locks.ReentrantLock()

var java.util.ArrayList zonesRequestsList = new java.util.ArrayList()

// Based on code from
// https://github.com/openhab/openhab/wiki/Samples-Rules#irrigation-controller
// and
// https://github.com/openhab/openhab/wiki/AlarmClock

// consider using the caldav binding

val int FruitTreeZone_Duration_Default = 1
val int Zone2_Duration_Default = 1

rule "Irrigation startup"
when
	System started
then
	postUpdate(Irrigation_Master, ON)
// ensure all relays are off at startup
//	sendCommand(Irrigation_Lawn, OFF)
//	sendCommand(Irrigation_Vege, OFF)
//	sendCommand(Irrigation_Back, OFF)
//	sendCommand(Irrigation_Front, OFF)
//	sendCommand(IrrigationTreesRelay, OFF)

// initialise durations
	if (FruitTreeZone_Duration.state == Uninitialized) {
		postUpdate(FruitTreeZone_Duration, FruitTreeZone_Duration_Default)
	}
	if (Zone2_Duration.state == Uninitialized) {
		postUpdate(Zone2_Duration, Zone2_Duration_Default)
	}
	if (ZonesRequestsNumber.state == Uninitialized ) {
		postUpdate(ZonesRequestsNumber, zonesRequestsList.size())
	}
end

rule "All Zones Off"
when
	Item AllZones received command OFF
then
	logInfo("relayduino", "All Zones Off")
//	sendCommand(IrrigationTreesRelay, "OFF")
	sendCommand(FruitTreeZone_RelayCtrl, OFF)
end

rule "Irrigation Manual or Auto Request"
when
	Item FruitTreeZone_Auto received command ON or
	Item FruitTreeZone_Manual received command ON
then
	lock.lock()
    try {
		logInfo("relayduino", "Manual or automatic request to switch trees " + receivedCommand.toString())
		sendCommand(FruitTreeZone_Request, ON)
	} finally {
    	lock.unlock()
    }
end

rule "Irrigation Manual OFF"
when
	Item FruitTreeZone_Manual received command OFF
then
	lock.lock()
    try {
		logInfo("relayduino", "Manual request to switch trees " + receivedCommand.toString())
		sendCommand(FruitTreeZone_Request, OFF)
	} finally {
    	lock.unlock()
    }
end

// the scheduler ensures that if more than one irrigation request occurs at a time
// all will be actioned sequentially
rule "Irrigation Requests"
when
	Item FruitTreeZone_Request received command ON
then
	lock.lock()
    try {
		// if something else in list add to list, else startIrrigation
		logInfo("relayduino", "IrrigationRequestTrees receivedCommand: " + receivedCommand.toString())
		if (FruitTreeZone_Request.state == ON ) {
			zonesRequestsList.add("Trees")
		}
		logInfo("relayduino", "zonesRequestsList.size() = " + zonesRequestsList.size())
		postUpdate(ZonesRequestsNumber, zonesRequestsList.size())
	} finally {
    	lock.unlock()
    }
end

rule "Irrigation End"
when
	Item FruitTreeZone_Request received command OFF
then
	lock.lock()
    try {
	//	if (receivedCommand.toString == "IrrigationRequestTrees")
		if (FruitTreeZone_Request.state == OFF) {
			zonesRequestsList.remove("Trees")
			sendCommand(FruitTreeZone_Run, OFF)
		}
		postUpdate(ZonesRequestsNumber, zonesRequestsList.size())
	} finally {
    	lock.unlock()
	}
end

rule "Request Manager"
when
	Item ZonesRequestsNumber changed
then
	lock.lock()
    try {
		logInfo("relayduino", "IrrigationRequestsNumber = " + ZonesRequestsNumber)
		// get first zone and start irrigation
		if (zonesRequestsList.size() > 0) {
			val String zone = zonesRequestsList.get(0).toString()
			if (zone == "Trees")
				sendCommand(FruitTreeZone_Run, ON)
		} else {
//			sendCommand(AllZones, OFF)
			sendCommand(FruitTreeZone_Run, OFF)
		}
	} finally {
    	lock.unlock()
	}
end

rule "Trees Run"
when
	Item FruitTreeZone_Run changed to ON
then
	lock.lock()
    try {
		// switch on irrigation
		//sendCommand(IrrigationTreesRelay, "ON")
		sendCommand(FruitTreeZone_RelayCtrl, ON)

		// get start time to nearest minute
		var DateTime startTime = parse(now.getYear() + "-" + now.getMonthOfYear() + "-" + now.getDayOfMonth() + "T" + now.getHourOfDay() + ":00")
		var DateTime endTime
		
		// determine end time depending on whether manual or automatic		
		var int duration = (FruitTreeZone_Duration.state as DecimalType).intValue()
		if (FruitTreeZone_Auto.state == ON) {
			if (duration < 1) {
				duration = FruitTreeZone_Duration_Default
			}
			logInfo("relayduino", "duration = " + duration + " mins")
			endTime = startTime.plusMinutes(duration)
			// create time to switch off irrigation
			//createTimer(endTime) [| sendCommand(IrrigationTreesRelay, "OFF") ]
			createTimer(endTime) [|
				sendCommand(FruitTreeZone_Request, OFF)
			]	
		} else {
			if (duration > 0) {
				logInfo("relayduino", "duration = " + duration + " mins")
				endTime = startTime.plusMinutes(duration)			
				// create time to switch off irrigation
				//createTimer(endTime) [| sendCommand(IrrigationTreesRelay, "OFF") ]
				createTimer(endTime) [|
					sendCommand(FruitTreeZone_Request, OFF)
				]
			}
		}
	} finally {
    	lock.unlock()
	}
end

rule "Trees End"
when
	Item FruitTreeZone_Run changed to OFF
then
	lock.lock()
    try {
		// switch on irrigation
		//sendCommand(IrrigationTreesRelay, "ON")
		sendCommand(FruitTreeZone_RelayCtrl, OFF)
	} finally {
    	lock.unlock()
	}
end

// water trees each Saturday morning for 3 hours
rule "Schedule Water Trees"
when
	Time cron "0 0 7 ? * SAT"
then
	lock.lock()
    try {
		// switch on irrigation
		sendCommand(FruitTreeZone_Request, ON)
	} finally {
    	lock.unlock()
	}
end

